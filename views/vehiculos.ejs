<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">

  <title>Unlimited Travel</title>


  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>


  <!-- Bootstrap core CSS -->
  <link href="css/bootstrap.min.css" rel="stylesheet">


  <style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }
  </style>


  <!-- Custom styles for this template -->
  <link href="css/navbar-top-fixed.css" rel="stylesheet">
  <link href="css/carousel.css" rel="stylesheet">
</head>

<body>

  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-success bg-gradient">
    <div class="container-fluid">
      <a class="navbar-brand active" href="/main">Logo</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav me-auto mb-2 mb-md-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/vehiculos">Vehiculos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="#">Corporativo</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/sucursales">Sucursales</a>
          </li>
          <!--
        <li class="nav-item">
          <a class="nav-link active" href="/login">Log In</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" href="/register">Sign up</a>
        </li>
        -->
          <li class="nav-item">
            <a class="nav-link active" href="/userProfile/<%= user._id %>">
              <%= user.nombre %>
            </a>
          </li>
          <li class="nav-item">
            <form action="/logout" method="POST">
              <button class="btn btn-outline-light" type="submit">LogOut</button>
            </form>
          </li>
        </ul>
        <form class="d-flex">
          <input class="form-control me-2" type="search" placeholder="Busqueda" aria-label="Search">
          <button class="btn btn-outline-light" type="submit">Buscar</button>
        </form>
      </div>
    </div>
  </nav>

  <div style="margin: 2rem 0">
    <h1 style="text-align: center;">Lista completa de todos los vehiculos disponibles.</h1>
  </div>
  <% if (user.admin){ %>
    <section style="text-align:center">
      <a type="button" class="btn btn-primary" href="/nuevo-vehiculo">AÃ±adir un vehiculo nuevo</a>
    </section>
    <% } %>


      <!-- Cards para los vehiculos -->
      <section style="padding: 2rem 4rem 0 4rem;">

        <div class="row row-cols-1 row-cols-md-3 g-4">

          <% for (const vehiculo of vehiculos ) {%>

            <div class="col">
              <div class="card h-100">
                <div>
                  <img style="object-fit: cover; width: 28rem; height: 18rem;" src="<%= vehiculo.imagePath %> "
                    class="card-img-top" alt="Imagen del vehiculo.">
                </div>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= vehiculo.marca %> - <%= vehiculo.model %>
                  </h4>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a type="button" class="btn btn-sm btn-success" href="/vehiculos/<%= vehiculo._id %> ">Ver
                        Vehiculo</a>
                      <a type="button" class="btn btn-sm btn-outline-success"
                        href="/vehiculos/<%= vehiculo._id %>/reserva">Reserva</a>
                    </div>
                    <small class="text-muted">Precio: $<%= vehiculo.precio %></small>
                  </div>
                </div>
              </div>
            </div>

            <% } %>


        </div>
      </section>







      <footer class="container">

        <div>
          <p class="float-center "><a href="#">Back to top</a></p>
          <p style="text-align: center;"><a href="#">Acerca de nosotros</a> &middot; <a href="#">Contacto</a> &middot;
            <a href="#">Ubicaciones</a> </p>
          <p style="text-align: center;">&copy; 2022 Nombre de la empresa.</p>
        </div>
      </footer>





      <script src="js/bootstrap.bundle.min.js"></script>


</body>

</html>